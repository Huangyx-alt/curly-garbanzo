local MaxBowlCount = 4

local function GetBowlAnimaName(lastCount,addCount,obj,cardId,bowlType)
    local state = 0
    if lastCount >= MaxBowlCount then
        return
    end
    if lastCount + addCount > MaxBowlCount then
        addCount = MaxBowlCount - lastCount
    end
    CalculateBingoMachine.OnDataChange(cardId,0,bowlType,addCount)
    if lastCount + addCount >= MaxBowlCount  then
        state = 1  --得到bingo
        CalculateBingoMachine.CalcuateBingo(cardId)
    end
    local animName = "dao"..(lastCount+addCount)
    if addCount ~= 1 then
        animName =  "dao"..lastCount.."_4"
    end
    UISound.play("christmas_add")
    obj:Play(animName)
    return state
end

function ChristmasSingleCardView:AddBowlDrink(bowlTable,cardId,bowlType,addCount)
    if bowlType == 1 then
        local lastCount = bowlTable[cardId][bowlType]
        bowlTable[cardId][bowlType] = bowlTable[cardId][bowlType] + addCount
       return GetBowlAnimaName(lastCount,addCount,self.Christmaswazi,cardId,bowlType)
    elseif bowlType == 2 then
        local lastCount = bowlTable[cardId][bowlType]
        bowlTable[cardId][bowlType] = bowlTable[cardId][bowlType] + addCount
