---@see 卡牌放大镜的补充功能_主要针对不同玩法的差异处理
local CardMagnifierSupplement = {}
local this = CardMagnifierSupplement
local AutoSign = nil

function CardMagnifierSupplement:Init(view)
    this.view = view
    if  ModelList.BattleModel:GetGameType() == PLAY_TYPE.PLAY_TYPE_AUTO_TICKET then
        AutoSign = this.HangUpDoubleNumAutoSign
    end
end

---@see 设置双数字自动盖章
function CardMagnifierSupplement:DoubleNumAutoSign(cardId,pos,powerupId)
    if AutoSign then
        AutoSign(cardId,pos,powerupId)
    end
end



---@see 设置挂机的双数字自动盖章
function CardMagnifierSupplement.HangUpDoubleNumAutoSign(cardId,pos,powerupId)
    --log.r("HangUpDoubleNumAutoSign  "..cardId.."      "..pos.."      "..powerupId)
    this.view:OnClickCardIgnoreJudgeByIndex(cardId,pos,powerupId)
end




return this